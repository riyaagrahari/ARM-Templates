{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"Virtual-Network-name": {
			"type": "string",
			"metadata": {
				"description": "Name of Virtual Network"
			}
		},
		"Location": {
			"type": "string",
			"defaultValue": "[resourceGroup().location]",
			"metadata": {
				"description": "Location of all resources"
			}
		},
		"Virtual-Network-addressPrefix": {
			"type": "string",
			"metadata": {
				"description": "Address-Prefix of Virtual Network in CIDR format"
			}
		},
		"subnet1_Name": {
			"type": "string",
			"metadata": {
				"description": "Name of Subnet 1"
			}
		},
		"subnet2_Name": {
			"type": "string",
			"metadata": {
				"description": "Name of Subnet 2"
			}
		},
		"subnet3_Name": {
			"type": "string",
			"metadata": {
				"description": "Name of Subnet 3"
			}
		},
		"subnet1_AddressPrefix": {
			"type": "string",
			"metadata": {
				"description": "Address-Prefix of Subnet 1 in CIDR format"
			}
		},
		"subnet2_AddressPrefix": {
			"type": "string",
			"metadata": {
				"description": "Address-Prefix of Subnet 2 in CIDR format"
			}

		},
		"subnet3_AddressPrefix": {
			"type": "string",
			"metadata": {
				"description": "Address-Prefix of Subnet 3 in CIDR format"
			}
		},
		"Firewall_AddressPrefix": {
			"type": "string",
			"metadata": {
				"description": "Address-Prefix of firewall in CIDR format"
			}
		},
		"Admin_Subnet_Name": {
			"type": "string",
			"metadata": {
				"description": "Name of Admin Subnet"
			}
		},
		"Admin_Subnet_AddressPrefix": {
			"type": "string",
			"metadata": {
				"description": "Address-Prefix of Admin Subnet  in CIDR format"
			}
		},

		"Webserver_NSG_Name": {
			"type": "string",
			"metadata": {
				"description": "Name of Network Security Group for Web server"
			}
		},

		"API_NSG_Name": {
			"type": "string",
			"metadata": {
				"description": "Name of Network Security Group for API"
			}
		},

		"Database_NSG_Name": {
			"type": "string",
			"metadata": {
				"description": "Name of Network Security Group for Database"
			}
		},

		"enableDdosProtection_In_VirtualNetwork": {
			"type": "bool",
			"metadata": {
				"description": "DDoS protection allow or deny"
			}
		}
	},

	"resources": [{
			"apiVersion": "2019-02-01",
			"type": "Microsoft.Network/networkSecurityGroups",
			"name": "[parameters('Webserver_NSG_Name')]",
			"location": "[parameters('Location')]",
			"properties": {
				"securityRules": [{
						"name": "HTTP-request",
						"properties": {
							"description": "Rule for HTTP request ",
							"protocol": "Tcp",
							"sourcePortRange": "*",
							"sourceAddressPrefix": "*",
							"destinationPortRange": "80",
							"destinationAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"access": "Allow",
							"priority": 100,
							"direction": "Inbound"
						}
					},

					{
						"name": "HTTPS-request",
						"properties": {
							"description": "Rule for HTTPS SSL request ",
							"protocol": "Tcp",
							"sourcePortRange": "*",
							"sourceAddressPrefix": "*",
							"destinationPortRange": "443",
							"destinationAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"access": "Allow",
							"priority": 110,
							"direction": "Inbound"
						}
					},

					{
						"name": "SSH",
						"properties": {
							"description": "Rule for SSH Request",
							"protocol": "Tcp",
							"sourcePortRange": "*",
							"sourceAddressPrefix": "[parameters('Admin_Subnet_AddressPrefix')]",
							"destinationPortRange": "22",
							"destinationAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"access": "Allow",
							"priority": 120,
							"direction": "Inbound"
						}
					},
					{
						"name": "DenyAllInBound",
						"properties": {
							"description": "Rule for denying all In-bound traffic ",
							"protocol": "Tcp",
							"sourcePortRange": "*",
							"sourceAddressPrefix": "*",
							"destinationPortRange": "*",
							"destinationAddressPrefix": "*",
							"access": "Deny",
							"priority": 4096,
							"direction": "Inbound"
						}
					},
					{
						"name": "HTTP-response",
						"properties": {
							"description": "Rule for HTTP response",
							"protocol": "Tcp",
							"sourcePortRange": "80",
							"sourceAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"destinationPortRange": "8081",
							"destinationAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"access": "Allow",
							"priority": 100,
							"direction": "Outbound"
						}
					},

					{
						"name": "HTTPS-response",
						"properties": {
							"description": "Rule for HTTP response",
							"protocol": "Tcp",
							"sourcePortRange": "443",
							"sourceAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"destinationPortRange": "8081",
							"destinationAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"access": "Allow",
							"priority": 110,
							"direction": "Outbound"
						}
					},

					{
						"name": "DenyAllOutBound",
						"properties": {
							"description": "Rule for denying all Out-bound traffic ",
							"protocol": "Tcp",
							"sourcePortRange": "*",
							"sourceAddressPrefix": "*",
							"destinationPortRange": "*",
							"destinationAddressPrefix": "*",
							"access": "Deny",
							"priority": 4096,
							"direction": "Outbound"
						}
					}
				]
			}
		},






		{
			"apiVersion": "2019-02-01",
			"type": "Microsoft.Network/networkSecurityGroups",
			"name": "[parameters('API_NSG_Name')]",
			"location": "[parameters('Location')]",
			"properties": {
				"securityRules": [{
						"name": "HTTP-request-API",
						"properties": {
							"description": "Rule for HTTP request ",
							"protocol": "Tcp",
							"sourcePortRange": "80",
							"sourceAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"destinationPortRange": "8081",
							"destinationAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"access": "Allow",
							"priority": 100,
							"direction": "Inbound"
						}
					},

					{
						"name": "HTTPS-request-API",
						"properties": {
							"description": "Rule for HTTPS SSL request ",
							"protocol": "Tcp",
							"sourcePortRange": "443",
							"sourceAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"destinationPortRange": "8081",
							"destinationAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"access": "Allow",
							"priority": 110,
							"direction": "Inbound"
						}
					},

					{
						"name": "SSH-API",
						"properties": {
							"description": "Rule for SSH Request",
							"protocol": "Tcp",
							"sourcePortRange": "*",
							"sourceAddressPrefix": "[parameters('Admin_Subnet_AddressPrefix')]",
							"destinationPortRange": "22",
							"destinationAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"access": "Allow",
							"priority": 120,
							"direction": "Inbound"
						}
					},
					{
						"name": "HTTP-response",
						"properties": {
							"description": "Rule for HTTP response",
							"protocol": "Tcp",
							"sourcePortRange": "8081",
							"sourceAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"destinationPortRange": "80",
							"destinationAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"access": "Allow",
							"priority": 100,
							"direction": "Outbound"
						}
					},

					{
						"name": "HTTPS-response",
						"properties": {
							"description": "Rule for HTTP response",
							"protocol": "Tcp",
							"sourcePortRange": "8081",
							"sourceAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"destinationPortRange": "443",
							"destinationAddressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"access": "Allow",
							"priority": 110,
							"direction": "Outbound"
						}
					},
					{
						"name": "API-SQL-request",
						"properties": {
							"description": "Rule for SQL request",
							"protocol": "Tcp",
							"sourcePortRange": "118",
							"sourceAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"destinationPortRange": "1433",
							"destinationAddressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"access": "Allow",
							"priority": 120,
							"direction": "Outbound"
						}
					},
					{
						"name": "API-MySQL-request",
						"properties": {
							"description": "Rule for MySQL request",
							"protocol": "Tcp",
							"sourcePortRange": "118",
							"sourceAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"destinationPortRange": "3306",
							"destinationAddressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"access": "Allow",
							"priority": 130,
							"direction": "Outbound"
						}
					}
				]
			}
		},



		{
			"apiVersion": "2019-02-01",
			"type": "Microsoft.Network/networkSecurityGroups",
			"name": "[parameters('Database_NSG_Name')]",
			"location": "[parameters('Location')]",
			"properties": {
				"securityRules": [{
						"name": "SQL-request",
						"properties": {
							"description": "Rule for SQL request acceptance",
							"protocol": "Tcp",
							"sourcePortRange": "118",
							"sourceAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"destinationPortRange": "1433",
							"destinationAddressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"access": "Allow",
							"priority": 100,
							"direction": "Inbound"
						}
					},
					{
						"name": "MySQL-request",
						"properties": {
							"description": "Rule for MySQL request acceptance",
							"protocol": "Tcp",
							"sourcePortRange": "118",
							"sourceAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"destinationPortRange": "3306",
							"destinationAddressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"access": "Allow",
							"priority": 110,
							"direction": "Inbound"
						}
					},
					{
						"name": "SSH-admin",
						"properties": {
							"description": "Rule for SSH Request",
							"protocol": "Tcp",
							"sourcePortRange": "*",
							"sourceAddressPrefix": "[parameters('Admin_Subnet_AddressPrefix')]",
							"destinationPortRange": "22",
							"destinationAddressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"access": "Allow",
							"priority": 120,
							"direction": "Inbound"
						}
					},


					{
						"name": "SQL-response",
						"properties": {
							"description": "Rule for SQL response",
							"protocol": "Tcp",
							"sourcePortRange": "1443",
							"sourceAddressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"destinationPortRange": "118",
							"destinationAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"access": "Allow",
							"priority": 100,
							"direction": "Outbound"
						}
					},
					{
						"name": "MySQL-response",
						"properties": {
							"description": "Rule for MySQL response",
							"protocol": "Tcp",
							"sourcePortRange": "3306",
							"sourceAddressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"destinationPortRange": "118",
							"destinationAddressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"access": "Allow",
							"priority": 110,
							"direction": "Outbound"
						}
					}

				]
			}
		},

		{
			"apiVersion": "2019-02-01",
			"name": "[parameters('Virtual-Network-name')]",
			"type": "Microsoft.Network/virtualNetworks",
			"location": "[parameters('Location')]",
			"dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('Webserver_NSG_Name'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('API_NSG_Name'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('Database_NSG_Name'))]"
      ],
			"properties": {
				"addressSpace": {
					"addressPrefixes": [
						"[parameters('Virtual-Network-addressPrefix')]"
					]
				},
				"subnets": [{
						"name": "[parameters('subnet1_Name')]",
						"properties": {
							"addressPrefix": "[parameters('subnet1_AddressPrefix')]",
							"networkSecurityGroup": {
								"id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('Webserver_NSG_Name'))]"
							}
						}
					},
					{
						"name": "[parameters('subnet2_Name')]",
						"properties": {
							"addressPrefix": "[parameters('subnet2_AddressPrefix')]",
							"networkSecurityGroup": {
								"id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('API_NSG_Name'))]"
							}
						}
					},
					{
						"name": "[parameters('subnet3_Name')]",
						"properties": {
							"addressPrefix": "[parameters('subnet3_AddressPrefix')]",
							"networkSecurityGroup": {
								"id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('Database_NSG_Name'))]"
							}
						}
					},
					{
						"name": "AzureFirewallSubnet",
						"properties": {
							"addressPrefix": "[parameters('Firewall_AddressPrefix')]"
						}
					}

				],
				"enableDdosProtection": "[parameters('enableDdosProtection_In_VirtualNetwork')]"
			}
		}
	],
	"outputs": {}
}